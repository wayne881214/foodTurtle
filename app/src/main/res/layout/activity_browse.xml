<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="-178dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="393dp"
        android:layout_height="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="79dp"
            android:layout_height="53dp"
            android:background="#FFFFFF"
            android:onClick="Setmenu"
            android:scaleX="0.4"
            android:scaleY="0.4"
            app:srcCompat="@drawable/bar_botton" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="151dp"
            android:layout_height="match_parent">

            <TextView
                android:text="首頁"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textColor="#00AEAE" />

            <TextView
                android:text="Johar Town Lahore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />
        </LinearLayout>

        <ImageButton
            android:layout_width="79dp"
            android:layout_height="53dp"
            app:srcCompat="@drawable/love"
            android:id="@+id/imageButton3"
            android:background="#FFFFFF"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:background="#FFFFFF"
            android:onClick="shopcarmenu"
            android:scaleX="0.4"
            android:scaleY="0.4"
            app:srcCompat="@drawable/shopping_car" />

    </LinearLayout>

    <SearchView
        android:layout_width="359dp"
        android:layout_height="53dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:outlineAmbientShadowColor="@color/teal_200"
        android:outlineSpotShadowColor="@color/teal_200" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="375dp"
        android:layout_height="598dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintVertical_bias="1.0"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="246dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="orderordermenu"
                app:srcCompat="@drawable/test_view" />

            <TextView
                android:text="$29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="大港吃鍋(逢甲福星店)"
                    android:layout_width="252dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/star"
                    android:id="@+id/imageView4"
                    android:layout_weight="1" />

                <TextView
                    android:text="4.2 (5k+)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:text="$$$.台式"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="244dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/test_view"
                android:id="@+id/imageView2" />

            <TextView
                android:text="$29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="大港吃鍋(逢甲福星店)"
                    android:layout_width="252dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/star"
                    android:id="@+id/imageView4"
                    android:layout_weight="1" />

                <TextView
                    android:text="4.2 (5k+)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:text="$$$.台式"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>