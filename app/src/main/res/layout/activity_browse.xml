<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteY="-178dp"
        tools:layout_editor_absoluteX="0dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="393dp"
            android:layout_height="52dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent">

        <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="79dp"
                android:layout_height="53dp"
                android:background="#FFFFFF"
                android:onClick="Setmenu"
                android:scaleX="0.4"
                android:scaleY="0.4"
                app:srcCompat="@drawable/bar_botton" />

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="151dp"
                android:layout_height="match_parent">

            <TextView
                    android:text="首頁"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textColor="#00AEAE" />

            <TextView
                    android:text="Johar Town Lahore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2" />
        </LinearLayout>

        <ImageButton
                android:layout_width="79dp"
                android:layout_height="53dp"
                app:srcCompat="@drawable/love"
                android:id="@+id/imageButton3"
                android:background="#FFFFFF"
                android:scaleX="0.4"
                android:scaleY="0.4"
                android:layout_weight="1" />

        <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:background="#FFFFFF"
                android:onClick="shopcarmenu"
                android:scaleX="0.4"
                android:scaleY="0.4"
                app:srcCompat="@drawable/shopping_car" />

    </LinearLayout>

    <SearchView
            android:layout_width="377dp"
            android:layout_height="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:outlineAmbientShadowColor="@color/teal_200"
            android:outlineSpotShadowColor="@color/teal_200"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:id="@+id/searchView" />

    <ListView
            android:layout_width="375dp"
            android:layout_height="499dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/lv_store"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintTop_toBottomOf="@+id/searchView"
            app:layout_constraintVertical_bias="0.342" />

</androidx.constraintlayout.widget.ConstraintLayout>