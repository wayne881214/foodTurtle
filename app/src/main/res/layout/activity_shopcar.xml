<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:id="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
                android:layout_width="202dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/close"
                android:id="@+id/imageButton"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:scaleX="0.4"
                android:scaleY="0.4"
                android:onClick="homePage" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="8sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="購物車"
                android:textSize="20sp"
                android:textColor="#000000" />

            <TextView
                android:text="永和豆漿(逢甲店)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:id="@+id/linearLayout10"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout8"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageButton
            android:layout_width="92dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ridding_man"
            android:id="@+id/imageButton2"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:scaleX="1"
            android:scaleY="1"
            android:scaleType="fitEnd" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="212dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text=" "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" />

            <TextView
                android:text="送餐時間"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />

            <TextView
                android:text="即時 (25 分鐘)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textColor="#000000"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="363dp"
        android:layout_height="85dp"
        android:id="@+id/linearLayout8"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:textSize="34sp"
            android:textColor="#000000" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="193dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="豆漿"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_weight="1"
                android:textColor="#00aeae" />

            <TextView
                android:text="少糖,五分冰"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_weight="1"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:text="$87"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="368dp"
        android:layout_height="82dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/linearLayout11">

        <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:textSize="34sp"
            android:textColor="#000000" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="193dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="燒餅"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_weight="1"
                android:textColor="#00aeae" />

            <TextView
                android:text="NULL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_weight="1"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:text="$87"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="364dp"
        android:layout_height="78dp"
        android:id="@+id/linearLayout5"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:textSize="34sp"
            android:textColor="#000000" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="193dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="原味蛋餅"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_weight="1"
                android:textColor="#00aeae" />

            <TextView
                android:text="不加蛋"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_weight="1"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:text="$87"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="365dp"
        android:layout_height="37dp"
        android:id="@+id/linearLayout7"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:text="小計"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:text="$261"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="369dp"
        android:layout_height="52dp"
        android:layout_weight="1"
        android:id="@+id/linearLayout"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:text="外送服務費"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:text="$60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="372dp"
        android:layout_height="49dp"
        android:id="@+id/linearLayout9"
        app:layout_constraintBottom_toTopOf="@+id/switch1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:layout_width="57dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/collect"
            android:id="@+id/imageButton6"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:scaleType="fitEnd" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="Coupon"
            android:text="使用優惠券"
            android:textColor="@color/teal_200" />

        <TextView
            android:layout_width="243dp"
            android:layout_height="match_parent"
            android:id="@+id/textView17"
            android:textColor="#00AEAE" />

    </LinearLayout>

    <Switch
        android:text="請問你需要免洗餐具、吸管嗎?"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="366dp"
        android:layout_height="69dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        android:layout_marginBottom="4dp"
        android:id="@+id/linearLayout6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:text="總金額 "
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:text="費用"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView22"
            android:layout_weight="1" />

        <TextView
            android:text="$321"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView23"
            android:layout_weight="1" />

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:onClick="viewshop2"
        android:text="查看付款方式及地址"
        android:textColor="#FFFFFF"
        android:textColorHint="#009688"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:rippleColor="#009688" />

</androidx.constraintlayout.widget.ConstraintLayout>